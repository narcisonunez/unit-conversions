{
    "name": "narcisonunez/unit-conversions",
    "description": "Support units conversions",
    "keywords": [
        "narcisonunez",
        "unit-conversions"
    ],
    "homepage": "https://github.com/narcisonunez/unit-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Narciso Nunez",
            "email": "narciso.arias21@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Dellabit\\UnitConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dellabit\\UnitConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
